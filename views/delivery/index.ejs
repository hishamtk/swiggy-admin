<!DOCTYPE html>
<html>
  <%- include('../partials/head') %>
  <body class="container">
    <header><%- include('../partials/navbar',{active:"deli"}) %></header>
    <div class="container text-center py-4 my-4">
   
      
      <button type="button" class="btn btn-outline-success btn-lg " data-toggle="modal" data-target="#addDeliveryModal">
        Add Delivery Captains
      </button>
      </div>

      <!-- Display all the shops registered -->
      <div class="row">
        <% for(var i=0;i<data.length;i++){  %>
          <div class="col-lg-4 mb-4 text-center">
            <div class="card" style="width: 18rem;">
              <img src="<%= data[i].image %>" class="card-img-top" alt="<%= data[i].name %> ">
              <div class="card-body">
                <h5 class="card-title"><%= data[i].name %> </h5>
     
                <p class="card-text">Age : <%= data[i].age %></p>
             
                <a href="/delivery/<%=data[i].name %>" class="btn btn-primary text-center">See Details</a>
              </div>
            </div>

          </div> 
        <% } %> 


      </div>

      <!-- Modal of Delivery form-->
      <%- include('addModal') %> 
      






    </body>
    <footer><%- include('../partials/footer') %></footer>
</body>
</html>